{
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": false,
		"declaration": true,
		"declarationDir": "./src",
		"baseUrl": "./",
		"target": "ESNext",
		"lib": ["ESNext"],
		"removeComments": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"composite": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"],
	"include": ["**/*"],
	"files": ["tests/global.d.ts"]
}